<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="学校"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewSchool_Login" android:layout_weight="1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editTextSchool_Login" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="学号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewId_Login" android:layout_weight="1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editTextId_Login" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewPassword_Login" android:layout_weight="1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editTextPassword_Login" android:layout_weight="1"/>
    </LinearLayout>
    <Button
            android:text="登录"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonLogin"/>
</LinearLayout>